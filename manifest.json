{
  "manifest_version": 3,
  "name": "HeadTab",
  "version": "2.1",
  "description": "A clean new tab page",
  "author": "sverben",
  "chrome_url_overrides": {
    "newtab": "public/html/index.html"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "unlimitedStorage",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "*://open.spotify.com/*",
    "*://www.youtube.com/*"
  ],
  "icons": {
    "128": "public/media/logo.png"
  }
}